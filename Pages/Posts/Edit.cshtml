@page
@model BlogProject.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>PostE</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostE.Id" />
            <div class="form-group">
                
                <label asp-for="PostE.Name" class="control-label"></label>
                <input asp-for="PostE.Name" class="form-control" />
                <span asp-validation-for="PostE.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PostE.Description" class="control-label"></label>
                <input asp-for="PostE.Description" class="form-control" />
                <span asp-validation-for="PostE.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PostE.Text" class="control-label"></label>
                <input asp-for="PostE.Text" class="form-control" />
                <span asp-validation-for="PostE.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PostE.BlogEId" class="control-label"></label>
                <select asp-for="PostE.BlogEId" class="form-control" asp-items="ViewBag.BlogEId"></select>
                <span asp-validation-for="PostE.BlogEId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
